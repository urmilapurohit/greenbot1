                            $("#errorMsgRegion").show();

                            $("#datatable").dataTable().fnDraw();
                        }
                    },
                });
            }
        }

        function ConvertToDate(data){
            if (data != null) {
                var date = new Date(parseInt(data.replace('/Date(', '')));
                return ("0" + date.getDate()).slice(-2) + '/' + ("0" + (date.getMonth() + 1)).slice(-2) + '/' + date.getFullYear();
            }
            else {
                return '';
            }
        }
    </script>
