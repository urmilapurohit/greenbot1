        //    isAllReseller = 1;
        //}
        //isAllComplianceOfficer = 0;
        //if ($('div#FCODiv p.select-all.selected').length > 0 && $('div#FCODiv p.select-all.selected.partial').length == 0) {
        //    isAllComplianceOfficer = 1;
        //}

        $.ajax({
