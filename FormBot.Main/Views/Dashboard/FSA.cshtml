        $('div.history-filter-div p.btnOk').click(function () {
            loadSTCGeneralReport();
            loadRECFailureReport();
        });

        $("div#ResellerDiv p.btnOk").click(function () {
            GetSTCJobStatus();
        });

        //$("div#FCODiv p.btnOk").click(function () {
        //    GetSTCJobStatus();
        //});

        $("#FCO").change(function () {
            var i = 0;
            while (i < fcoCount) {
