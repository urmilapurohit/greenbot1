@model List<FormBot.Entity.DocumentSignatureRequest.DocumentSignatureLog>
<ul>
    @if (Model.Any())
    {
        foreach (var item in Model)
        {
            <li>
                <span class="icon">
                    @GetImagePath(item.MessageType)
                </span>
                <h4>
                    @HeadingMessage(item.MessageType, item.UserFullName, item.UserTypeName)
                </h4>
                @GetMessageDetails(item.MessageType, item.UserFullName, "", item.UserTypeName)
                @if (!string.IsNullOrEmpty(item.Message))
                {
                    <p class="message">@Html.Raw(item.Message)</p>
                }
                @*<p class="user-details"><span>Aaron Roseller</span> - <span>Designer</span>, <span>emauil1@email.com</span> <span>(same as installer)</span></p>
                    <p class="user-details"><span>Aaron Roseller</span> - <span>Designer</span>, <span>emauil1@email.com</span> <span>(same as installer)</span></p>
                    <p class="user-details"><span>Aaron Roseller</span> - <span>Designer</span>, <span>emauil1@email.com</span> <span>(same as installer)</span></p>*@
                <p class="date-and-ip">
                    <span>@item.CreatedOn.ToString() AEST</span> | <span><strong>IP recorded:</strong> @item.IpAddress</span>
                </p>
            </li>
        }
    }
    else
    {
        <li>No history found</li>
    }
</ul>

