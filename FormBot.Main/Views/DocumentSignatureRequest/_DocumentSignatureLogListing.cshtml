@helper GetImagePath(int number)
{
    string ImageTag = "<img src='{0}' />";
    if (number == 1)
    {
        @Html.Raw(string.Format(ImageTag, "/Images/Document/1.png"));
    }
    else if (number == 2)
    {
        @Html.Raw(string.Format(ImageTag, "/Images/Document/2.png"));
    }
    else if (number == 3)
    {
        @Html.Raw(string.Format(ImageTag, "/Images/Document/3.png"));
    }
    else if (number == 4)
    {
        @Html.Raw(string.Format(ImageTag, "/Images/Document/4.png"));
    }
    else if (number == 5)
    {
        @Html.Raw(string.Format(ImageTag, "/Images/Document/5.png"));
    }
    else if (number == 6)
    {
        @Html.Raw(string.Format(ImageTag, "/Images/Document/6.png"));
    }
    else if (number == 7)
    {
        @Html.Raw(string.Format(ImageTag, "/Images/Document/2.png"));
    }
}
@helper HeadingMessage(int number, string Name, string UserTypeName)
{
    if (number == 1)
    {
        @Html.Raw("Document created by <span class='user-details'>" + UserTypeName + "</span>.");
    }
    else if (number == 2)
    {
        @Html.Raw("Document has been sent successfully.");
    }
    else if (number == 3)
    {
        @Html.Raw("Document opened by <span class='user-details'> " + UserTypeName + ".");
    }
    else if (number == 4)
    {
        @Html.Raw("<span class='user-details'>" + UserTypeName + "</span> has signed the document.");
    }
    else if (number == 5)
    {
        @Html.Raw("Document has been <span class='user-details'>Completed</span>.");
    }
    else if (number == 6)
    {
        @Html.Raw("Completed Document Sent.");
    }
    else if (number == 7)
    {
        @Html.Raw("Update email id.");
    }
}
