    <script src="~/Scripts/FormBot.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    @Scripts.Render("~/datatableJs")
    @Scripts.Render("~/bundles/jqueryval")*@
