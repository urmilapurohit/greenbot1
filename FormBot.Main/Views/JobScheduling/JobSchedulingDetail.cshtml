            $.ajax({
                type: 'POST',
                url: '@Url.Action("GetAssignedSolarCompanyToRAM", "RAMSolarCompany")',
                dataType: 'json',
                data: '',
                async: false,
                success: function (solarcompany) {

                    solarCompanyList = [];

                    $.each(solarcompany, function (i, company) {
                        //$("#SolarCompanyId").append('<option value="' + company.Value + '">' + company.Text + '</option>');
