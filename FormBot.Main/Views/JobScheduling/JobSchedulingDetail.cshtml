                    if (localStorage.getItem('JobScheduling_SolarCompanyId') == '') {
                        $('#hdnsolarCompanyid').val(solarCompanyList.length > 0 ? solarCompanyList[0].value : 0);
                        localStorage.setItem('JobScheduling_SolarCompanyId', $('#hdnsolarCompanyid').val());
