    <script>
        var UnScheduled = 1;
        var All = 0;

        $(document).ready(function () {

            if ('@ProjectSession.UserTypeId' == 4 || '@ProjectSession.UserTypeId' == 6 || '@ProjectSession.UserTypeId' == 8) {
                $("#hdnsolarCompanyid").val('@ProjectSession.SolarCompanyId');
            }
                

