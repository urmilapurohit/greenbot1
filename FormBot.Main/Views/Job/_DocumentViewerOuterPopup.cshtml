@using FormBot.Helper;
@if (ProjectSession.IsNewViewer)
{
    <div class="modal fade popupInstaller document-viewer-modal new-popup" tabindex="-1" role="dialog" id="popupViewerDoc">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5>Send For Signature</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="$('#divViewer').html('');"><span aria-hidden="true">&times;</span></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="alert alert-danger alert-dismissible" role="alert" id="errorMsgRegion1" style="display: none">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            </div>
                            <div class="alert alert-success alert-dismissible" role="alert" id="successMsgRegion1" style="display: none">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="padding-bottom:10px;">
                        <div class="col-sm-8">
                            <h2 class="modal-title">
                                <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" id="Capa_1" x="0px" y="0px" viewBox="0 0 60 60" style="enable-background:new 0 0 60 60;" xml:space="preserve" width="512px" height="512px">
                                <path d="M38.914,0H6.5v60h47V14.586L38.914,0z M17.5,14h10c0.552,0,1,0.447,1,1s-0.448,1-1,1h-10c-0.552,0-1-0.447-1-1  S16.948,14,17.5,14z M42.5,48h-25c-0.552,0-1-0.447-1-1s0.448-1,1-1h25c0.552,0,1,0.447,1,1S43.052,48,42.5,48z M42.5,40h-25  c-0.552,0-1-0.447-1-1s0.448-1,1-1h25c0.552,0,1,0.447,1,1S43.052,40,42.5,40z M42.5,32h-25c-0.552,0-1-0.447-1-1s0.448-1,1-1h25  c0.552,0,1,0.447,1,1S43.052,32,42.5,32z M42.5,24h-25c-0.552,0-1-0.447-1-1s0.448-1,1-1h25c0.552,0,1,0.447,1,1S43.052,24,42.5,24z   M37.5,16V2l14,14H37.5z" fill="#adb5bd" />



                            </svg>
                                Document Viewer: <span>Document Viewer</span>
                            </h2>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group pull-right popup-btn-group">
                                <a class="btn default cancel_ic line-height-33" data-dismiss="modal" aria-label="Close" onclick="$('#divViewer').html('');">Cancel</a>
                                <button type="button" class="btn border-btn" id="btnSave">Save Document</button>
                                <button type="button" class="btn primary icon-btn" id="btnSendRequest"><span class="sprite-img signature_ic"></span>Send For Signature</button>
                            </div>
                        </div>
                    </div>
                    <div id="divViewer" class="document-viewer-outer clearfix"></div>
                </div>
            </div>
        </div><!-- /.modal-content -->
    </div>
}
else
{
    <div class="modal fade popupInstaller" tabindex="-1" role="dialog" id="popupViewerDoc">
        <div class="vertical-alignment-helper-popup">
            <div class="modal-dialog vertical-align-center-popup modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" style="display: inline-block;">Document Viewer</h4>

                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

                        <a class="pull-right" style="background-position: -2px -209px;width: 22px;height: 22px;" title="Save" id="btnSave" href="javascript:void(0);">
                            <img src="~/images/savepdf.png" alt="">
                        </a>


                    </div>
                    <div class="modal-body" style="padding:0;background-color:#ffffff;">
                        <div id="divViewer"></div>
                    </div>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div>
    </div>
}
<script>

    $(document).ready(function () {
        var JobStcStatus = $('#STCStatusId').val();
        if (JobStcStatus != "10" && JobStcStatus != "12" && JobStcStatus != "14" && JobStcStatus != "17") {
            $("#btnSave").hide();
        }
    });

</script>